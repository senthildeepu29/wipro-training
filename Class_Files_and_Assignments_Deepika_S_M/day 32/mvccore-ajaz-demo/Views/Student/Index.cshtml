@{
    ViewData["Title"] = "Student Management";
}

<div class="col-md-12">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Please enter the details below.</h3>
        </div>
        <div class="panel-body">
            <div class="form-group col-md-5">
                <label>Student Name</label>
                <input type="text" name="StudentName" id="StudentName" class="form-control" placeholder="Enter Student Name" required />
            </div>
            <div class="form-group col-md-5">
                <label>Student Address</label>
                <input type="text" name="StudentAddress" id="StudentAddress" class="form-control" placeholder="Enter Student Address" required />
            </div>
            <div class="form-group col-md-1">
                <div style="float: right; display:inline-block;">
                    <input class="btn btn-primary" name="submitButton" id="btnSave" value="Save" type="button" />
                </div>
            </div>
        </div>
    </div>
    <hr />

    <table id="tblStudent" class="table table-bordered table-striped table-responsive table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Student Name</th>
                <th>Student Address</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // Load data when page loads
        $(document).ready(function () {
            LoadData();
        });

        // Fetch all students and populate table
        function LoadData() {
            $("#tblStudent tbody").empty();

            $.ajax({
                type: 'GET',
                url: '@Url.Action("GetStudent", "Student")',
                dataType: 'json',
                success: function (data) {
                    $.each(data, function (i, item) {
                        var rows = "<tr>"
                            + "<td>" + item.studentID + "</td>"
                            + "<td>" + item.studentName + "</td>"
                            + "<td>" + item.studentAddress + "</td>"
                            + "</tr>";
                        $('#tblStudent tbody').append(rows);
                    });
                },
                error: function (xhr, status, error) {
                    console.error("Error while loading data:", error);
                    alert("Failed to fetch student data!");
                }
            });
        }

        // Save student via AJAX
        $("#btnSave").click(function () {
            var student = {
                StudentName: $("#StudentName").val(),
                StudentAddress: $("#StudentAddress").val()
            };

            if (student.StudentName === "" || student.StudentAddress === "") {
                alert("Please enter both Student Name and Address!");
                return;
            }

            $.ajax({
                type: 'POST',
                url: '@Url.Action("CreateStudent", "Student")',
                data: student,
                success: function (response) {
                    alert(response.message);
                    $("#StudentName").val('');
                    $("#StudentAddress").val('');
                    LoadData();
                },
                error: function () {
                    alert("Error while saving data!");
                }
            });
        });
    </script>
}
